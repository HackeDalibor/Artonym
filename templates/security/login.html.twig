{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block bodystyle %}
    style="
            background: url({{ asset('/uploads/images/siteimage/background-photo.jpeg') }});
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        "
{% endblock %}
{% block body %}
<section>
    faire texte de présentation du site , explication , en utilisant les balises strong et em pour le référencement
</section>
    <section class="login">

    
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            
            <label for="inputEmail" class="form-login">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword" class="form-login">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >


         
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            
            <button class="btn btn-lg btn-primary form-login" type="submit">
                Sign in
            </button>
        </form>
        <p class="form-login">Forgot password ? <a href="{{ path('app_forgot_password_request') }}">Click here !</a></p>
    </section>


{% endblock %}
