<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.0/js/bootstrap.min.js" integrity="sha512-8Y8eGK92dzouwpROIppw +0kPauu0qqtnzZZNEF8Pat5tuRNJxJXCkbQfJ0HlUG3y1HB3z18CSKmUo7i2zcPpg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous" defer></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {% block bodystyle %}{% endblock %}>
        <header>
            <nav>
                <ul class="header-ul">
                    <li><a href="{{ path('app_home') }}"><img src="{{ asset('uploads/images/siteimage/artonym_logo.png') }}" alt="artonym logo"></a></li>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('app_subject_index') }}">Subjects</a></li>
                            <li><a href="{{ path('app_category_index') }}">Categories</a></li>
                            <li><a href="{{ path('app_user_index') }}">Users</a></li>
                        {% endif %}
                        <li><input type="search" name="search" id="search" placeholder="Search..."></li>
                        <li><a href="{{ path('app_user_profile') }}" title="Profile"><i class="fa-regular fa-user"></i></a></li>
                        <li><a href="{{ path('app_message_index') }}" title="messages"><i class="fa-regular fa-envelope"></i></a></li>
                        <li>
                            <a href="{{ path('app_notification_list') }}" title="Notifications">
                                {% set nb = 0 %}
                                {% for notification in app.user.notifications %}
                                    {% if notification.isRead == 0 %}
                                        {% set nb = nb + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if nb >= 1 %}    
                                    <div class="nbNotifications">
                                        {{ nb }}
                                    </div>
                                {% endif %}
                                <i class="fa-regular fa-bell"></i>
                            </a>
                        </li>
                        <li><a href="{{ path('app_logout') }}" title="Logout"><i class="fa-solid fa-right-from-bracket"></i></a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}">Register</a></li>
                        <li><a href="{{ path('app_login') }}">Login</a></li>
                    {% endif %}
                </ul>
                {% block categories %}{% endblock %}
            </nav>
        </header>
        <main>

            {% if app.user %}
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                    <div class="offcanvas-header">
                        <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mail</h2>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                    <div class="list-group">
                        <a href="{{ path("app_message_index") }}" class="list-group-item list-group-item-action">Home</a>
                    </div>
                    <div class="list-group">
                        <a href="{{ path("app_message_received") }}" class="list-group-item list-group-item-action">Mailbox</a>
                    </div>
                    <div class="list-group">
                        <a href="{{ path("app_message_sent") }}" class="list-group-item list-group-item-action active">Sent messages</a>
                    </div>
                    </div>
                </div>
            {% endif %}

            {#* Afficher les messages de succès #}
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}

            {#* Afficher les messages d'erreur #}
            {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
            {% endfor %}

            {#* Afficher les messages de warning #}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning">
                {{ message }}
                </div>
            {% endfor %}


            {% block body %}{% endblock %}
        </main>
        <footer>
            <figure class="figure-footer">
                <img src="{{ asset('uploads/images/siteimage/artonym.png') }}" alt="artonym logo" class="footer-logo">
                <figcaption>
                    <p>Artonym &copy 2022</p>
                </figcaption>
            </figure>
            <a href="#">About</a> {#* à propos du site #}
            <a href="#">Terms of Service</a> {#* CGU (Conditions générales d'utilisation) #}
            <a href="#">Legal Notices</a> {#* mentions légales #}
        </footer>
        {% block js %}{% endblock %}
    </body>
</html>
