<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %}
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('app_home') }}">Artonym</a></li>
                    <li><a href="{{ path('app_subject_index') }}">Subjects</a></li>
                    <li><a href="{{ path('app_category_index') }}">Categories</a></li>
                    <li><a href="{{ path('app_message_index') }}">Messages</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}">Register</a></li>
                        <li><a href="{{ path('app_login') }}">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
         {#? Afficher les messages de succès #}

      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}

    {#? Afficher les messages d'erreur #}

    {% for message in app.flashes('error') %}
      <div class="alert alert-error">
        {{ message }}
      </div>
    {% endfor %}

    {#? Afficher les messages de warning #}

      {% for message in app.flashes('warning') %}
          <div class="alert alert-warning">
          {{ message }}
          </div>
      {% endfor %}


        {% block body %}{% endblock %}
    </body>
</html>
